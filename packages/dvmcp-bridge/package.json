{
  "name": "@dvmcp/bridge",
  "version": "0.1.25",
  "description": "Bridge connecting MCP servers to Nostr's DVM ecosystem",
  "module": "index.ts",
  "type": "module",
  "license": "MIT",
  "bin": {
    "dvmcp-bridge": "./cli.ts"
  },
  "files": [
    "**/*.ts",
    "**/*.js",
    "!**/*.test.ts",
    "!**/*.test.js",
    "config.example.yml"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "dev": "bun --watch index.ts",
    "start": "DEBUG=* bun run cli.ts",
    "typecheck": "tsc --noEmit",
    "lint": "bun run typecheck && bun run format",
    "test": "bun test",
    "prepublishOnly": "bun run lint && bun run test"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@dvmcp/commons": "latest",
    "@getalby/lightning-tools": "^5.1.2",
    "@modelcontextprotocol/sdk": "^1.4.1",
    "dotenv": "^16.4.7",
    "nostr-tools": "^2.12.0",
    "yaml": "^2.7.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
