{
  "name": "@dvmcp/commons",
  "version": "0.2.1",
  "description": "Shared utilities for DVMCP packages",
  "type": "module",
  "exports": {
    "./*": "./*.ts",
    "./*/*": "./*/*.ts"
  },
  "files": [
    "**/*.ts",
    "**/*.js",
    "!**/*.test.ts",
    "!**/*.test.js"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "peerDependencies": {
    "typescript": "^5.8.3",
    "@types/debug": "^4.1.12"
  },
  "dependencies": {
    "debug": "^4.4.1",
    "yaml": "^2.8.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
