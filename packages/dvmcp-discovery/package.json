{
  "name": "@dvmcp/discovery",
  "version": "0.1.24",
  "description": "Discovery service for MCP tools in the Nostr DVM ecosystem",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "dvmcp-discovery": "./cli.ts"
  },
  "files": [
    "**/*.ts",
    "**/*.js",
    "!**/*.test.ts",
    "!**/*.test.js",
    "config.example.yml"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "dev": "bun --watch index.ts",
    "start": "bun run cli.ts",
    "typecheck": "tsc --noEmit",
    "lint": "bun run typecheck && bun run format",
    "test": "bun test",
    "prepublishOnly": "bun run lint && bun run test"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0",
    "@types/debug": "^4.1.12"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "nostr-tools": "^2.12.0",
    "yaml": "^2.7.0",
    "@dvmcp/commons": "latest"
  },
  "publishConfig": {
    "access": "public"
  }
}
